{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-quiz",
  "title": "raycast-quiz",
  "description": "",
  "icon": "extension-icon.png",
  "author": "Kaijiro <https://github.com/Kaijiro>",
  "platforms": [
    "macOS"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "import-quiz",
      "title": "Import Quiz",
      "description": "Import a quiz from a JSON file",
      "mode": "no-view"
    },
    {
      "name": "start-quiz",
      "title": "Start Quiz",
      "description": "",
      "mode": "view",
      "arguments": [
        {
          "name": "quizId",
          "placeholder": "Quiz ID",
          "type": "text",
          "optional": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.3",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^2.1.3"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "echo 'Publishing to npm is disabled. Use yarn publish to publish to the Raycast Store.' && exit 1",
    "publish": "yarn dlx @raycast/api@latest publish"
  }
}
